{{ define "table/view.tmpl" }}

{{ template "header.tmpl" }}

<h1> {{ .title }} </h1>
<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
      		<th scope="col">Product Name</th>
      		<th scope="col">Price</th>
    	</tr>
  	</thead>
	<tbody>
	{{ range .list  }}
		<tr>
			<th scope="row">{{ .ID }}</th>
			<td>{{ .Name }}</td>
			<td>{{ .Price }}</td>
    	</tr>
	{{ end }}
	</tbody>
</table>

{{ template "footer.tmpl" }}

{{ end }}

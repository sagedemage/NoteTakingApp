{{ define "content" }}

{{ if eq .error_status true }}
<div class="alert alert-danger" role="alert">
	{{ .msg_error }}
</div>
{{ end }}

{{ if eq .success_status true }}
<div class="alert alert-success" role="alert">
	{{ .msg_success }}
</div>
{{ end }}

<form method="post">
	<div class="form-group">
    	<label for="exampleInputUsername1">Email or Username</label>
    	<input class="form-control" id="exampleInputUsername1" 
		name="username" placeholder="Enter email or username" required>
  	</div>
  	<div class="form-group">
    	<label for="exampleInputPassword1">Password</label>
    	<input type="password" class="form-control" id="exampleInputPassword1" name="password" 
		placeholder="Enter password" required>
  	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>

{{ end }}

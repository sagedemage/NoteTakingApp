{{ define "notes/index.tmpl" }}

{{ template "header.tmpl" }}

<h1> {{ .title }} </h1>
<form method="post">
<button type="button" class="btn btn-primary" onclick="window.location.href='/add-new-note';">Add New Note</button>
<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
      		<th scope="col">Title</th>
      		<th scope="col">Description</th>
      		<th scope="col">Edit</th>
      		<th scope="col">Delete</th>
    	</tr>
  	</thead>
	<tbody>
	{{ range .list  }}
		<tr>
			<th scope="row">{{ .ID }}</th>
			<td>{{ .Title }}</td>
			<td>{{ .Description }}</td>
			<td>
				<form method="post">
  					<div class="form-group">
   						<input type="text" id="edit" name="edit" value={{ .ID }} hidden>
  					</div>
					<button type="submit" class="btn btn-primary">Edit</button>
				</form>
			</td>
			<td>
				<form method="post">
  					<div class="form-group">
   						<input type="text" id="delete" name="delete" value={{ .ID }} hidden>
  					</div>
					<button type="submit" class="btn btn-danger">Delete</button>
				</form>
			</td>
    	</tr>
	{{ end }}
	</tbody>
</table>

{{ template "footer.tmpl" }}

{{ end }}

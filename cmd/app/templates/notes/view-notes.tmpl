{{ define "notes/view-notes.tmpl" }}

{{ template "header.tmpl" }}

<h1> {{ .title }} </h1>
<form method="post">
<button type="button" class="btn btn-primary" onclick="window.location.href='/add-new-note';">Add New Note</button>
<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
      		<th scope="col">Title</th>
      		<th scope="col">Description</th>
    	</tr>
  	</thead>
	<tbody>
	{{ range .list  }}
		<tr>
			<th scope="row">{{ .ID }}</th>
			<td>{{ .Title }}</td>
			<td>{{ .Description }}</td>
    	</tr>
	{{ end }}
	</tbody>
</table>

{{ template "footer.tmpl" }}

{{ end }}

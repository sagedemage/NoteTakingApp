name: ESLint (Front-end)

on:
  pull_request:
    branches: [ 'main' ]
  push:
    branches: [ '*' ]

jobs:
  lighthouseci:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-node@v3
        with:
          node-version: 'lts/*'
      - name: Install Dependencies and Build React App
        working-directory: ./frontend
        run: npm install
      - name: Build React App
        working-directory: ./frontend
        run: npm run build
      - name: Run ESLint
        working-directory: ./frontend
        run: npm run lint
    
